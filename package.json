{
  "name": "diabolicallauncher",
  "productName": "Diabolical Launcher",
  "version": "0.0.10",
  "description": "Launcher for the Diabolical Studios games",
  "main": "src/index.js",
  "scripts": {
    "dev-ui": "cd src/launcher-ui && cross-env BROWSER=none netlify dev",
    "start": "concurrently \"npm run dev-ui\" \"electron --trace-warnings .\"",
    "build": "cross-env PUBLISH_CHANNEL=latest electron-builder -c.extraMetadata.env.NODE_ENV=production",
    "build:dev": "cross-env PUBLISH_CHANNEL=beta electron-builder -c.extraMetadata.env.NODE_ENV=development",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate": "prisma generate",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "repository": "https://github.com/Diabolical-Studios/DiabolicalGameLauncher",
  "build": {
    "appId": "studio.diabolical.diabolicallauncher",
    "productName": "Diabolical Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/js/**/*",
      "src/launcher-ui/public/**/*",
      "src/index.js",
      "src/preload.js",
      "src/splash.html",
      "icons/**/*"
    ],
    "protocols": [
      {
        "name": "Diabolical Launcher Protocol",
        "schemes": [
          "diabolicallauncher"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico",
      "artifactName": "${productName} Setup.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns",
      "artifactName": "${productName}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons",
      "artifactName": "${productName}.${ext}"
    }
  },
  "publish": {
    "provider": "github",
    "releaseType": "release",
    "channel": "${env.PUBLISH_CHANNEL}",
    "allowDowngrade": false,
    "allowPrerelease": "${env.PUBLISH_CHANNEL === 'beta'}"
  },
  "keywords": [],
  "author": "doruksasmaz",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "electron-dl": "^3.5.2",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.3.0",
    "extract-zip": "^2.0.1",
    "node-fetch": "^3.3.2",
    "oracledb": "^6.4.0",
    "update-electron-app": "^3.0.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.1.0",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2"
  }
}
