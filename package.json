{
  "name": "diabolicallauncher",
  "productName": "Diabolical Launcher",
  "version": "0.0.0",
  "description": "Launcher for the Diabolical Studios games",
  "main": "src/index.js",
  "scripts": {
    "dev-ui": "cd src/launcher-ui && netlify dev",
    "start": "concurrently \"npm run dev-ui\" \"electron .\"",
    "build": "npm run build --prefix src/launcher-ui && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "generate": "prisma generate"
  },
  "repository": "https://github.com/Diabolical-Studios/DiabolicalGameLauncher",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "studio.diabolical.diabolicallauncher",
    "productName": "Diabolical Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "src/launcher-ui/build/**/*"
    ],
    "protocols": [
      {
        "name": "Diabolical Launcher Protocol",
        "schemes": [
          "diabolicallauncher"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico",
      "artifactName": "${productName} Setup.${ext}",
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns",
      "artifactName": "${productName}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons",
      "artifactName": "${productName}.${ext}"
    }
  },
  "keywords": [],
  "author": "doruksasmaz",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.7.8",
    "dotenv": "^16.4.7",
    "electron-dl": "^3.5.2",
    "electron-is-dev": "^3.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.3.0",
    "extract-zip": "^2.0.1",
    "node-fetch": "^3.3.2",
    "oracledb": "^6.4.0",
    "update-electron-app": "^3.0.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0"
  }
}
